<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="AppTitle" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppPrice" parent="">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppPriceSelected" parent="AppPrice">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppLightTitle" parent="AppTitle">
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

</resources>
